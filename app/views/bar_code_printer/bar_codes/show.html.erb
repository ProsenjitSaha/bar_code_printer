<html>
<head>
  <style>
    html, body {
      margin:0px;
      padding:0px;
    }

    .label {
      padding:40px 50px 10px 20px;
      width:100%;
      font-family:Arial, Verdana, sans-serif;
      font-size:64px;
    }
  </style>
</head>
<body onload="window.print();">
  <div id="wrapper">
    <div id="content">
      <label style="margin-left: 25px; font-size: 48pt;"><%= @first_line_text %></label><br/>
      <label style="margin-left: 25px; font-size: 48pt;"><%= @second_line_text %></label><br/>
      <label style="margin-left: 25px; font-size: 72pt;"><%= @bar_code_value %></label><br/>
      <% if @bar_code_image %>
      <img src='<%= "data:image/png;base64,#{Base64.encode64(@bar_code_image)}" %>'
           style="width: 95%; height: 20%; display:block;" ></img><br/>
      <% end %>

      <% if @item_code_image %>
        <label style="margin-left: 25px; font-size: 60pt;">Item: <%= params[:item_id] %></label><br/>
        <img src='<%= "data:image/png;base64,#{Base64.encode64(@item_code_image)}" %>'
           style="width: 95%; height: 20%; display:block;" ></img><br/>
      <% end %>

      <% if @consignment_code_image %>
        <label style="margin-left: 25px; font-size: 60pt;">Consignment: <%= params[:consignment_id] %></label><br/>
        <img src='<%= "data:image/png;base64,#{Base64.encode64(@consignment_code_image)}" %>'
             style="width: 95%; height: 20%; display:block;" ></img><br/>
      <% end %>
    </div>
  </div>
</body>
</html>
